
<div class="login_wrapper">
    <div class="animate form login_form">
        <section class="x_panel ">
            <div class="row">
                <div class="col-md-12 center center-block center-margin align-content-center">

                    <img src="/img/eindhovenLogo.PNG" style="padding-left: 10%;">
                    <h3 class="text-center">
                        Register
                    </h3>
                    <form action="/users/register" method="post">
                        <div class="form-group">
                            <label for="name">Voornaam</label>
                            <input type="text" class="form-control" name="firstName" value="{{firstName}}">
                        </div>
                        <div class="form-group">
                            <label for="name">Achternaam</label>
                            <input type="text" class="form-control" name="lastName" value="{{lastName}}">
                        </div>
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="email" class="form-control" name="email" value="{{email}}">
                        </div>
                        <div class="form-group">
                            <label for="password">Password</label>
                            <input type="password" class="form-control" name="password" value="{{password}}">
                        </div>
                        <div class="form-group form-check-inline">
                            <input class="form-check-input" type="radio" name="roleMunicipality" id="municipality" value="municipality">
                            <label class="form-control" for="municipality">Municipality</label>
                        </div>
                        <div class="form-group form-check-inline">
                            <input class="form-check-input" type="radio" name="roleEmployee" id="employee" value="employee">
                            <label class="form-control" for="role">Employee</label>
                        </div>
                        <div class="form-group form-check-inline">
                            <input class="form-check-input" type="radio" name="roleKid" id="kid" value="kid">
                            <label class="form-control" for="role">Kid</label>
                        </div>
                        <div class="form-group form-check-inline">
                            <input class="form-check-input" type="radio" name="roleCompany" id="company" value="Company">
                            <label class="form-control" for="role">Company</label>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-danger">Submit</button>
                        </div>
                    </form>

                </div>
            </div>


        </section>
    </div>


</div>