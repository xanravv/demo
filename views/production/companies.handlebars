        <div class="clearfix"></div>

        <div class="row">

            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_content">
                    <!-- tabel voor werknemers -->
                    {{#if user.employee}}
                        <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
                            <thead>
                            <tr>
                                <th>Bedrijfsnaam</th>
                                <th>Branche</th>
                                <th>Locatie</th>
                                <th>Token rekening</th>
                                <th>Subsidie rekening</th>
                                <th>Email</th>
                                <th>Wachtwoord</th>
                                <!--<th>Edit</th>-->
                                <th>Delete</th>
                            </tr>
                            </thead>
                            <tbody>
                    {{#each company}}
                                <tr>
                                    <td><a href="/companies/detail/{{id}}">{{companyName}}</a></td>
                                    <td>{{branche}}</td>
                                    <td>{{location}}</span></td>
                                    <td>{{bankAccount}}</span></td>
                                    <td>{{subsidyAccount}}</span></td>
                                    <td>{{email}}</span></td>
                                    <td>{{password}}</span></td>
                                    <!--
                                    <td>
                                        <a class="btn btn-primary" href="/companies/edit/{{id}}"><i class="fa fa-pencil"></i> Edit</a>
                                    </td>
                                    -->
                                    <td>
                                        <form action="/companies/{{id}}?_method=DELETE" method="post" id="delete-form">
                                            <input type="hidden" name="_method" value="DELETE">
                                            <button type="submit" class="btn btn-danger"><i class="fa fa-remove"></i> Delete</button>
                                        </form>
                                    </td>
                                </tr>
                    {{/each}}
                            </tbody>
                        </table>
                        <p>
                            <a class="btn" href="/companies/add"><i class="fa fa-pencil"></i> Voeg toe</a>
                        </p>
                    {{/if}}

                    <!-- tabel voor gasten -->
                    {{#unless user.employee}}
                        <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
                            <thead>
                            <tr>
                                <th>Bedrijfsnaam</th>
                                <th>Branche</th>
                                <th>Locatie</th>
                            </tr>
                            </thead>
                            <tbody>
                    {{#each company}}
                                <tr>
                                    <td><a href="/companies/detail/{{id}}">{{companyName}}</a></td>
                                    <td>{{branche}}</td>
                                    <td>{{location}}</span></td>
                                </tr>
                    {{/each}}
                            </tbody>
                        </table>
                    {{/unless}}
                    </div>
                </div>
            </div>

        </div>
    </div>
