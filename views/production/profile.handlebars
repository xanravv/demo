<!-- page content -->
<div class="right_col" role="main">
    <div class="clearfix"></div>
    <div class="row">
      <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">

          <div class="x_content">
            <div class="col-md-3 col-sm-3 col-xs-12 profile_left">

              <h3>{{user.firstName}} {{user.lastName}} {{user.companyName}}</h3>

                {{#if user.kid}}
                  <ul class="list-unstyled user_data">
                    <li><i class="fa fa-birthday-cake"></i> Leeftijd: {{user.age}}</li>
                  </ul>
                    <ul class="list-unstyled user_data">
                    <li><i class="fa fa-clock-o"></i> Gevolgde lessen: {{user.gevolgdeLessen}}</li>
                  </ul>
                {{/if}}

              <br />
                {{#if user.company}}

                <ul class="list-unstyled user_data">
                    <li><i class="fa fa-map-marker user-profile-icon"></i> Locatie: {{user.location}}
                    </li>

                    <li>
                        <i class="fa fa-briefcase user-profile-icon"></i> Branche: {{user.branche}}
                    </li>
                </ul>
                    {{#each user.companySports}}
                    <table>
                        <tr>
                            <td colspan="2">Sport</td>
                            <td>&nbsp;:&nbsp;</td>
                            <td>{{sport}}</td>
                        </tr>
                        <tr>
                            <td colspan="2">Prijs</td>
                            <td>&nbsp;:&nbsp;</td>
                            <td>{{price}}</td>
                        </tr>
                    </table>
                    {{/each}}
                {{/if}}

                {{#if user.municipality}}

                <ul class="list-unstyled user_data">
                    <li>
                        Subsidie bankrekening: {{user.subsidyAccount}}
                    </li>
                </ul>
                {{/if}}
                <hr>

              <!-- start skills
              <h4>Skills</h4>
              <ul class="list-unstyled user_data">
                <li>
                  <p>Web Applications</p>
                  <div class="progress progress_sm">
                    <div class="progress-bar bg-green" role="progressbar" data-transitiongoal="50"></div>
                  </div>
                </li>
                <li>
                  <p>Website Design</p>
                  <div class="progress progress_sm">
                    <div class="progress-bar bg-green" role="progressbar" data-transitiongoal="70"></div>
                  </div>
                </li>
                <li>
                  <p>Automation & Testing</p>
                  <div class="progress progress_sm">
                    <div class="progress-bar bg-green" role="progressbar" data-transitiongoal="30"></div>
                  </div>
                </li>
                <li>
                  <p>UI / UX</p>
                  <div class="progress progress_sm">
                    <div class="progress-bar bg-green" role="progressbar" data-transitiongoal="50"></div>
                  </div>
                </li>
              </ul>
              <!-- end of skills -->

            </div>



          </div>
        </div>
      </div>
    </div>

</div>
<!-- /page content -->

