<!-- page content -->
<div class="right_col" role="main">
  <div class="">

    <div class="clearfix"></div>

    <div class="row">
      <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">

          <div class="x_content">
            <div class="col-md-3 col-sm-3 col-xs-12 profile_left">

              <h3>Bedrijfsnaam: {{company.companyName}}</h3>

              <ul class="list-unstyled user_data">
                <li><i class="fa fa-map-marker user-profile-icon"></i> Locatie: {{company.location}}
                </li>

                <li>
                  <i class="fa fa-briefcase user-profile-icon"></i> Branche: {{company.branche}}
                </li>
              </ul>

                {{#each company.companySports}}
                        <p>{{sport}} : {{price}} tokens</p>
                {{/each}}

                <hr>

                {{#if user.kid}}
                    <div class="row marketing">
                        <div class="col-lg-12">
                            <h4>Bankrekening</h4>
                            <p>Te besteden tokens: {{user.bankAccount}}</p>
                        </div>
                        <form action="/kids/spend/{{user.id}}/{{company.id}}?_method=PUT" method="post">
                            {{#each company.companySports}}
                                <div class="radio">
                                    <label>
                                        <input type="radio" class="flat" name="costs" value="{{price}}"> <span>{{sport}} : {{price}} tokens</span>
                                        <input type="hidden" name="subject" value="{{sport}}">
                                    </label>
                                </div>
                            {{/each}}
                            <hr>
                            <div class="col-lg-12">

                                <!--
                                    <input type="number" class="form-control" name="costs">
                                    -->
                                    <button type="submit" class="btn btn-primary">Betaal</button>
                            </div>
                        </form>
                    </div>
                {{/if}}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- /page content -->

