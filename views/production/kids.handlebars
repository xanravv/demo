<!-- page content -->
<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Kinderen</h3>
            </div>
            <!--
            <div class="title_right">
                <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Zoeken...">
                        <span class="input-group-btn">
                      <button class="btn btn-default" type="button">Vind!</button>
                    </span>
                    </div>
                </div>
            </div>
            -->
        </div>
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="">
                    <div class="x_content">
                    <!-- tabel voor werknemers -->
                    {{#if user.employee}}
                        <table id="datatable-responsive" class="table table-bordered dt-responsive nowrap" cellspacing="0" width="100%" style="border-radius:5px!important;">
                            <thead>
                            <tr>
                                <th>Achternaam</th>
                                <th>Voornaam</th>
                                <th>Leeftijd</th>
                                <th>Rekening</th>
                                <th>Email</th>
                                <th>Wachtwoord</th>
                                <th>Edit</th>
                                <th>Delete</th>
                            </tr>
                            </thead>
                            <tbody>
                    {{#each kid}}
                            <tr>
                                <td><a href="/kids/detail/{{id}}">{{firstName}}</a></td>
                                <td><a href="/kids/detail/{{id}}">{{lastName}}</td>
                                <td>{{age}}</span></td>
                                <td>{{bankAccount}}</span></td>
                                <td>{{email}}</span></td>
                                <td>{{password}}</span></td>
                                <td>
                                    <a class="btn btn-primary inline" href="/kids/edit/{{id}}"><i class="fa fa-pencil"></i> Edit</a>
                                </td>
                                <td>
                                    <form action="/kids/{{id}}?_method=DELETE" method="post" id="delete-form">
                                        <input type="hidden" name="_method" value="DELETE">
                                        <button type="submit" class="btn btn-danger"><i class="fa fa-remove"></i> Delete</button>
                                    </form>
                                </td>
                            </tr>
                    {{/each}}
                            </tbody>
                        </table>
                        <p>
                            <a class="btn" href="/kids/add"><i class="fa fa-pencil"></i> Voeg toe</a>
                        </p>
                    {{/if}}

                    <!-- tabel voor gasten -->
                    {{#unless user.employee}}
                        <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
                            <thead>
                            <tr>
                                <th>Voornaam</th>
                                <th>Achternaam</th>
                                <th>Leeftijd</th>
                            </tr>
                            </thead>
                            <tbody>
                    {{#each kid}}
                                <tr>
                                    <td><a href="/kids/detail/{{id}}">{{firstName}}</a></td>
                                    <td><a href="/kids/detail/{{id}}">{{lastName}}</a></td>
                                    <td>{{age}}</span></td>
                                </tr>
                    {{/each}}
                            </tbody>
                        </table>
                    {{/unless}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
        <!-- /page content -->
