        </div>

        <div class="clearfix"></div>

        <div class="row">

            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_content">


                        <table id="datatable-responsive" class="table table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
                            <thead>
                            <tr>
                                <th>Van</th>
                                <th>Naar</th>
                                <th>Hoeveelheid</th>
                                <th>Sport</th>
                                <th>Transactie ID</th>
                                <th>Datum</th>
                            </tr>
                            </thead>
                            {{#if transaction}}
                                <tbody>
                                {{#each transaction}}
                                    <tr>
                                        <td><a href="/kids/detail/{{from.id}}">{{from.firstName}} {{from.lastName}}</a></td>
                                        <td><a href="/companies/detail/{{to.id}}">{{to.companyName}}</a></td>
                                        <td>{{amount}}</span></td>
                                        <td>{{subject}}</span></td>
                                        <td>{{id}}</span></td>
                                        <td>{{formatDate date 'llll'}}</span></td>
                                    </tr>
                                {{/each}}
                                </tbody>
                            {{else}}
                                <p>Er zijn nog geen transacties gemaakt.</p>
                            {{/if}}
                        </table>


                    </div>
                </div>
            </div>

        </div>
    </div>

